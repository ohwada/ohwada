<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="8dp" >
    
	<LinearLayout 
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" >
    
    	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/report_firmware" />

    	<TextView
			android:id="@+id/text_firmware"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

	</LinearLayout>

	<LinearLayout 
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" >
    
    	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/report_battery" />

    	<TextView
			android:id="@+id/text_battery"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		
	</LinearLayout>

    <TextView
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/report_device" />

    <TextView
		android:id="@+id/text_device"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
				
	<Button 
		android:id="@+id/button_report"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="4dp"
		android:text="@string/button_report" />
                
	<include layout="@layout/bt_button" /> 
	<include layout="@layout/text_debug" /> 
	<include layout="@layout/button_back" /> 	

</LinearLayout>
